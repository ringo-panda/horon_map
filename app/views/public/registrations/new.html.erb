<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :name, class:"col-md-3 col-form-label mb-2" do %>
      <span class="badge bg-danger text-white">必須</span> ニックネーム
    <% end %>
    <div class="col-md-6">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class:"col-md-3 col-form-label mb-2" do %>
      <span class="badge bg-danger text-white">必須</span> メールアドレス
    <% end %>
    <div class="col-md-6">
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <% if @minimum_password_length %>
      <%= f.label :password, class:"col-md-6 col-form-label mb-2" do %>
        <span class="badge bg-danger text-white">必須</span> パスワード(<%= @minimum_password_length %>文字以上)
      <% end %>
    <% end %>
    <div class="col-md-6">
      <%= f.text_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class:"col-md-6 col-form-label mb-2" do %>
      <span class="badge bg-danger text-white">必須</span> パスワード(確認用)
    <% end %>
    <div class="col-md-6">
      <%= f.text_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="col-md-6">
      <%= f.submit "新規登録", class:"btn btn-block btn-success mb-3" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
