<h2>登録情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :name, class:"col-md-3 col-form-label mb-2" do %>
      <span class="badge bg-danger text-white">必須</span> ニックネーム
    <% end %>
    <div class="col-md-6">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class:"col-md-3 col-form-label mb-2" do %>
      <span class="badge bg-danger text-white">必須</span> メールアドレス
    <% end %>
    <div class="col-md-6">
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :current_password, class:"col-md-6 col-form-label mb-2" do %>
      <span class="badge bg-secondary text-white">任意</span> 現在のパスワード
    <% end %>
    <div class="col-md-6">
      <%= f.text_field :current_password, autofocus: true, autocomplete: "current-password", class: "form-control" %>
      <small class="form-text text-muted">(パスワードを変更しない場合は空欄のみ入力が必要です)</small>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <% if @minimum_password_length %>
      <%= f.label :password, class:"col-md-6 col-form-label mb-2" do %>
        <span class="badge bg-secondary text-white">任意</span> 新しいパスワード(<%= @minimum_password_length %>文字以上)
      <% end %>
    <% end %>
    <div class="col-md-6">
      <%= f.text_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      <small class="form-text text-muted">(パスワードを変更しない場合は空欄のままにしてください)</small>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class:"col-md-6 col-form-label mb-2" do %>
      <span class="badge bg-secondary text-white">任意</span> 新しいパスワード(確認用)
    <% end %>
    <div class="col-md-6">
      <%= f.text_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      <small class="form-text text-muted">(パスワードを変更しない場合は空欄のままにしてください)</small>
    </div>
  </div>

  <div class="col-md-6">
  <%= f.submit "変更する", class:"btn btn-block btn-success mb-3" %>
  </div>

<% end %>

<div class="col-md-6 mb-5">
<%= link_to "戻る", user_path(current_user), class:"btn btn-outline-secondary btn-block" %>
</div>
