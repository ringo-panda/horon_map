<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :email, class:"col-md-3 col-form-label mb-2" do %>
      <span class="badge bg-danger text-white">必須</span> メールアドレス
    <% end %>
    <div class="col-md-6">
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :password, class:"col-md-6 col-form-label mb-2" do %>
      <span class="badge bg-danger text-white">必須</span> パスワード
    <% end %>
    <div class="col-md-6">
      <%= f.text_field :password, autofocus: true, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group form-check">
      <div class="col-md-6">
        <%= f.check_box :remember_me, class:"form-check-input" %>
        <%= f.label :remember_me, "ログインを保持する", class:"form-check-label" %>
      </div>
    </div>
  <% end %>

  <div class="col-md-6">
    <%= f.submit "ログイン", class:"btn btn-primary btn-block mb-3" %>
  </div>

<% end %>

<%= render "public/shared/links" %>
